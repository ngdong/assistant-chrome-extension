{
  "manifest_version": 2,
  "name": "Bookmarks",
  "description": "Bookmark the page",
  "version": "1.0",
  "author": "Dong Nguyen",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Show bookmarks",
    "default_popup": "index.html"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "alarms",
    "http://*/*.ico|png",
    "https://*/*.ico|png"
  ],
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "background": {
    "page": "background.html"
  }
}
